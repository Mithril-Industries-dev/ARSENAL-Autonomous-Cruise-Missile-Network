<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- HAWKEYE Tactical Command Helmet -->
  <ThingDef ParentName="ApparelArmorHelmetPowerBase">
    <defName>Arsenal_HawkEye</defName>
    <label>HAWKEYE helmet</label>
    <description>Advanced tactical command helmet integrating mobile ARGUS sensor capability with two-way LATTICE communication via SKYLINK. The wearer becomes a mobile sensor node, detecting threats within a 30-tile radius and receiving network awareness of all threats detected by the MITHRIL system.\n\nAbilities:\n- Designate DAGGER Strike: Target a location for cruise missile strike\n- Mark QUIVER Priority: Mark an enemy for concentrated DART attack\n\nRequires operational SKYLINK satellite and Terminal connection to LATTICE.\n\nPassive bonuses:\n+15% shooting accuracy\n+15% aiming speed\n+10% move speed\nNight vision enabled</description>
    <thingClass>Arsenal.Apparel_HawkEye</thingClass>
    <graphicData>
      <texPath>Arsenal/MITHRIL_HAWKEYE_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Spacer</techLevel>
    <tradeability>Sellable</tradeability>
    <generateCommonality>0.3</generateCommonality>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToMake>90000</WorkToMake>
      <Mass>1.5</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.25</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>0.15</ShootingAccuracyPawn>
      <AimingDelayFactor>-0.15</AimingDelayFactor>
      <MoveSpeed>0.5</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Plasteel>60</Plasteel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <apparel Inherit="False">
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <!-- No wornGraphicPath - rendering handled by custom DrawWornExtras() in C# -->
      <!-- This ensures correct directional textures and 50% size reduction -->
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
        <li>EVA</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
      <li Class="Arsenal.CompProperties_HawkeyeSensor">
        <detectionRadius>30</detectionRadius>
      </li>
    </comps>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Arsenal_HawkEye</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>

</Defs>
